<?xml version='1.0' encoding='utf-8'?>
<widget id="com.exolutus.getitbuyer" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Exo SMS Router</name>
    <description>
        A basic Framework7 template for PhoneGap.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    
    
    <icon src="www/img/f7-icon.png"/>
    
    <content src="index.html" />    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
		<preference name="android-minSdkVersion" value="19" />
		<!--<preference name="android-targetSdkVersion" value="21" />
		<preference name="android-maxSdkVersion" value="21" />-->
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="phonegap-version" value="cli-7.1.0" />
    <preference name='pgb-builder-version' value='2' /> <!-- 1= old builder, 2 = new builder-->
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-build-tool" 		value="gradle"/>
	<preference name="android-versionCode" 		value="1"/>
	
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
	<plugin name="cordova-sms-plugin" spec="0.1.11" />
	
	<plugin name="phonegap-plugin-push" spec="2.1.2">
        <variable name="FCM_VERSION" value="11.0.1" />
 	</plugin>
	<platform name="android">
	  <resource-file src="google-services.json" target="google-services.json" />
	</platform>
	<!--By default, on iOS, the plugin will register with APNS. If you want to use FCM on iOS, in the platform tag for iOS add the -->
	<platform name="ios">
	  <resource-file src="GoogleService-Info.plist" />
	</platform>
	<!--<engine name="android" spec="~7.0.0" />-->
	
	<plugin name="cordova-plugin-ace" spec="0.1.2" />
	
	
</widget>


